<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_main_menu"
    tools:context=".tariffs.Tariffs">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="223dp"
        android:layout_height="105dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo_foreground" />

    <View
        android:id="@+id/tariff2_view"
        android:layout_width="355dp"
        android:layout_height="101dp"
        android:background="@drawable/bg_gradient_main_menu_view1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412" />

    <View
        android:id="@+id/costs_view8"
        android:layout_width="355dp"
        android:layout_height="101dp"
        android:background="@drawable/bg_gradient_main_menu_view"
        android:onClick="changeTariff_Click"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412" />

    <View
        android:id="@+id/tariff1_view"
        android:layout_width="355dp"
        android:layout_height="101dp"
        android:background="@drawable/bg_gradient_main_menu_view"
        android:onClick="myTariff_Click"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222" />

    <TextView
        android:id="@+id/tariff3_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:text="Перейти на другой тариф"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tariff2_view"
        app:layout_constraintEnd_toEndOf="@+id/tariff2_view"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="@+id/tariff2_view"
        app:layout_constraintTop_toTopOf="@+id/tariff2_view"
        app:layout_constraintVertical_bias="0.759" />

    <TextView
        android:id="@+id/tariff1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="188dp"
        android:layout_marginRight="188dp"
        android:text="Мой тариф"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/tariff1_view"
        app:layout_constraintEnd_toEndOf="@+id/tariff1_view"
        app:layout_constraintTop_toTopOf="@+id/tariff1_view"
        app:layout_constraintVertical_bias="0.18" />

    <TextView
        android:id="@+id/tariff1_more"
        android:layout_width="232dp"
        android:layout_height="23dp"
        android:fontFamily="@font/open_sans_light"
        android:text="О текущем тарифном плане"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tariff1_view"
        app:layout_constraintEnd_toEndOf="@+id/tariff1_view"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="@+id/tariff1_view"
        app:layout_constraintTop_toTopOf="@+id/tariff1_view"
        app:layout_constraintVertical_bias="0.794" />

    <TextView
        android:id="@+id/tariff3_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:text="Изменение тарифа"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/tariff2_view"
        app:layout_constraintEnd_toEndOf="@+id/tariff2_view"
        app:layout_constraintTop_toTopOf="@+id/tariff2_view"
        app:layout_constraintVertical_bias="0.131" />


</androidx.constraintlayout.widget.ConstraintLayout>